{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode %}
        Modifier un trick!
    {% else %}
        Ajouter un trick!
    {% endif %}
{% endblock %}

{% block body %}

    <!-- navbar -->
    {{ block('navbar') }}

    <section>
      <div class="image image-overlay image-cover" style="background-image:url({{ asset('images/slider/thumb-1920-183974.jpg') }})"
      data-top-top="transform: translateY(0px);" 
      data-top-bottom="transform: translateY(-250px);"></div>
      <div class="container-create-edit">
        <div class="row justify-content-center align-items-end">
          <div class="col col-md-6">
          <h3> 
            {% if editMode %}
                Modifier un trick
            {% else %}
                Créer un trick
            {% endif %}
          </h3>
            <div class="row align-items-center">
              <div class="col">
                <div class="row align-items-center">
                  <div class="col-md-12">
                    {% if editMode %}
                      {{ form_start(formVideo) }}
                          {{form_widget(formVideo) }}
                          <button class="btn btn-info">
                              Ajouter une vidéo
                          </button>
                      {{ form_end(formVideo) }}

                      {{ form_start(formImage) }}
                        <span class="image-trick-edit">
                          {{form_widget(formImage) }}
                        </span>
                        <button class="btn btn-info">
                          Ajouter une image
                        </button>
                      {{ form_end(formImage) }}
                    {% endif %}
                    {{ form_start(formTrick) }}
                    {{ form_widget(formTrick) }}
                      <button class="btn btn-info">
                        {% if editMode %}
                            Modifier
                        {% else %}
                            Ajouter
                        {% endif %}
                      </button>
                    {{ form_end(formTrick) }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- footer -->
    {{ block('footer') }}
{% endblock %}
