
{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <div class="div-block-alert">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{ message }}
        </div>
      {% endfor %}
    </div>
    <div class="viewport">
      <div class="image image-overlay" style="background-image:url(../images/slider/293266.jpg)"></div>
      <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
          <div class="col-md-6 col-lg-5">
            <div class="accordion-group accordion-group-portal" data-accordion-group>
              <div class="accordion open" data-accordion>
                <div class="accordion-control" data-control>
                  <h5>Connexion</h5>
                </div>
                <div class="accordion-content" data-content>
                  <div class="accordion-content-wrapper">
                    <form action="{{ path('login') }}" method="post">
                      <div class="form-group">
                        <label for="exampleFormControlInput1">Adresse Email</label>
                        <input type="email" name="_username" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlInput2">Mot de passe</label>
                        <input type="password" name="_password" class="form-control" id="exampleFormControlInput2">
                      </div>
                      <button class="btn btn-primary btn-block">Se connecter</button>
                      <div class="reset-and-register">
                        <a href="{{ path('register') }}">S'inscrire ?</a>
                        <a href="{{ path('forgetPassword') }}">Mot de passe oubli√© ? </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


{% endblock %}
